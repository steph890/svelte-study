<script>
	let colors = ["red","Orange","Yellow","Green"];
	
	$: console.log("log.1: ", colors);
	
	function assignment(){
		colors.pop();
		colors=colors;
		console.log("log.2: ", colors);
	}

</script>

<p>	{colors.join(", ")} {colors.length} colors we have </p>

<button on:click={assignment}> Assignment </button>

