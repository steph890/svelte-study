<script>
	let name = "world";
	let size = 30;
</script>



<main>
	<input type="range" bind:value={size} min=0 max=100><br/>
	<input type="number" bind:value={size} min=0 max=100><br/>
	<h1 style="font-size:{size}px;"> Hello {name}! </h1>
	
</main>

